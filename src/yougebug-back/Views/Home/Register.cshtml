
<div class="w-100 h-100 pt-5" style="padding-top: 20%;">
    <h3 class="text-center mb-5">注册</h3>
    <form action="/register" method="post" class="m-auto p-4 shadow rounded" style="width: 400px;">
        <div class="form-group">
            <label for="txt_account">账号</label>
            <input type="text" class="form-control" name="account" id="txt_account" required placeholder="请输入账号" />
        </div>
        <div class="form-group">
            <label for="txt_password">密码</label>
            <input type="password" class="form-control" name="password" id="txt_password" required placeholder="请输入密码" />
        </div>
        <div class="form-group">
            <label for="txt_confirm">再次输入密码</label>
            <input type="password" class="form-control" name="password" id="txt_confirm" required placeholder="确认密码" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">注册</button>
    </form>
</div>

